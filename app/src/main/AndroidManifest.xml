        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:label="StockControl"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Menu"
            android:label="Menu"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name=".StockIn"
            android:label="Stock In"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name=".ProductDetails"
            android:label="Product Details"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".ProductList"
            android:label="Product List"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name=".Discounts"
            android:label="Discounts"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".FloatingMenu"
            android:label="Floating Menu"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".ClockIn"
            android:label="Clock In"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".EmployeeList"
            android:label="Employee List"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".EmployeeDetails"
            android:label="Employee Details"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".ClockOut"
            android:label="Clock Out"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".StockTransfer"
            android:label="Stock Transfer"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name=".StockWatch"
            android:label="Stockwatch"
            android:screenOrientation="portrait"
            >
        </activity>

    </application>

</manifest>